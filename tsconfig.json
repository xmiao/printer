{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "removeComments": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "public/js",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "lib": [
          "es2015",
          "dom"
        ]
    },
    "include": [
        "src/**/*",
        "public/javascripts/*"
    ]
}
