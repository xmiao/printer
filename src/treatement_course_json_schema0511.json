{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "疗程定义json schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "order_sets": {
      "title": "医嘱套餐",
      "type": "object",
      "properties": {
        "drug_order_set": {
          "title": "1-药品医嘱集",
          "type": "array",
          "items": {
            "title": "药品医嘱",
            "type": "object",
            "properties": {
              "retrieve": {
                "title": "1-搜索",
                "type": "object",
                "properties": {
                  "generic_name": {
                    "type": "string",
                    "title": "通用名"
                  },
                  "brand_name": {
                    "type": "string",
                    "title": "商品名"
                  },
                  "pharmacology_name": {
                    "type": "string",
                    "title": "药理药效类名"
                  },
                  "variety_name": {
                    "type": "string",
                    "title": "药品品种"
                  },
                  "medicine_id": {
                    "title": "物品域的商品ID",
                    "type": "integer"
                  },
                  "csId": {
                    "type": "integer",
                    "title": "临床服务代码"
                  },
                  "csTypeCode": {
                    "type": "integer",
                    "title": "临床服务类型代码"
                  },
                  "pharmacology_class_code": {
                    "title": "术语的药理分类代码",
                    "type": "number"
                  },
                  "medicine_variety_code": {
                    "title": "药品品种代码",
                    "type": "number"
                  },
                  "form_code": {
                    "type": "number",
                    "title": "药品剂型代码"
                  }
                }
              },
              "default": {
                "title": "2-填入属性值",
                "type": "object",
                "properties": {
                  "freqName": {
                    "type": "string",
                    "title": "频次名称"
                  },
                  "freqCode": {
                    "type": "integer",
                    "title": "频次代码"
                  },
                  "dosageRouteCode": {
                    "type": "integer",
                    "title": "用药途径代码"
                  },
                  "dosageRouteName": {
                    "type": "string",
                    "title": "用药途径名称"
                  },
                  "dose": {
                    "type": "integer",
                    "title": "药品剂量"
                  },
                  "doseUnitCode": {
                    "type": "integer",
                    "title": "药品剂量单位"
                  }
                }
              },
              "execution": {
                "$ref": "#/definitions/execution"
              }
            }
          }
        },
        "herb_order_set": {
          "title": "2-草药医嘱集",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "retrieve": {
                "title": "1-搜索",
                "type": "object",
                "properties": {
                  "herb_name": {
                    "type": "string",
                    "title": "草药方名称"
                  },
                  "herb_detail_retrieve": {
                    "type": "array",
                    "title": "草药方明细搜索",
                    "items": {
                      "type": "object",
                      "properties": {
                        "generic_name": {
                          "type": "string",
                          "title": "通用名"
                        },
                        "brand_name": {
                          "type": "string",
                          "title": "商品名"
                        },
                        "pharmacology_name": {
                          "type": "string",
                          "title": "药理药效类名"
                        },
                        "variety_name": {
                          "type": "string",
                          "title": "药品品种"
                        },
                        "medicine_id": {
                          "title": "物品域的商品ID",
                          "type": "integer"
                        },
                        "csId": {
                          "type": "integer",
                          "title": "临床服务代码"
                        },
                        "csTypeCode": {
                          "type": "integer",
                          "title": "临床服务类型代码"
                        },
                        "pharmacology_class_code": {
                          "title": "术语的药理分类代码",
                          "type": "number"
                        },
                        "medicine_variety_code": {
                          "title": "药品品种代码",
                          "type": "number"
                        },
                        "form_code": {
                          "type": "number",
                          "title": "药品剂型代码"
                        }
                      }
                    }
                  }
                }
              },
              "default": {
                "title": "2-输入属性值",
                "type": "object",
                "properties": {
                  "herb_decoction": {
                    "type": "string",
                    "title": "草药方煎法"
                  },
                  "freqName": {
                    "type": "string",
                    "title": "频次名称"
                  },
                  "freqCode": {
                    "type": "integer",
                    "title": "频次代码"
                  },
                  "dosageRouteCode": {
                    "type": "integer",
                    "title": "用药途径代码"
                  },
                  "dosageRouteName": {
                    "type": "string",
                    "title": "用药途径名称"
                  },
                  "herb_detail_default": {
                    "title": "草药方明细集合",
                    "type": "array",
                    "items": {
                      "title": "草药方明细默认值",
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string",
                          "title": "药品名称"
                        },
                        "dose": {
                          "type": "integer",
                          "title": "药品剂量"
                        },
                        "doseUnitCode": {
                          "type": "integer",
                          "title": "药品剂量单位"
                        }
                      }
                    }
                  }
                }
              },
              "execution": {
                "$ref": "#/definitions/execution"
              }
            }
          }
        },
        "exam_order_set": {
          "title": "3-检查医嘱集",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "retrieve": {
                "title": "1-检索",
                "type": "object",
                "properties": {
                  "exam_name": {
                    "title": "检查服务名称",
                    "type": "string"
                  },
                  "exam_category": {
                    "type": "string",
                    "title": "部位"
                  },
                  "csId": {
                    "type": "integer",
                    "title": "临床服务代码"
                  },
                  "csTypeCode": {
                    "type": "integer",
                    "title": "临床服务类型代码"
                  },
                  "examItems": {
                    "title": "检查项目集合",
                    "type": "array",
                    "items": {
                      "title": "检查项目",
                      "type": "object",
                      "properties": {
                        "item_name": {
                          "type": "string",
                          "title": "检查项目名称"
                        },
                        "item_id": {
                          "title": "检查项目ID",
                          "type": "integer"
                        },
                        "item_part": {
                          "title": "检查项目部位",
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              },
              "default": {
                "title": "2-输入属性值",
                "type": "object",
                "properties": {
                }
              },
              "execution": {
                "$ref": "#/definitions/execution"
              }
            }
          }
        },
        "lab_order_set": {
          "title": "4-检验医嘱集",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "retrieve": {
                "title": "1-检索",
                "type": "object",
                "properties": {
                  "lab_name": {
                    "type": "string",
                    "title": "检验服务名称"
                  },
                  "csId": {
                    "type": "integer",
                    "title": "检验服务代码"
                  }
                }
              },
              "default": {
                "title": "2-输入默认值",
                "type": "object",
                "properties": {
                  "specimen_id": {
                    "title": "标本代码",
                    "type": "integer"
                  },
                  "specimen_name": {
                    "title": "标本名称",
                    "type": "string"
                  },
                  "freqName": {
                    "type": "string",
                    "title": "频次名称"
                  },
                  "freqCode": {
                    "type": "integer",
                    "title": "频次代码"
                  }
                }
              },
              "execution": {
                "$ref": "#/definitions/execution"
              }
            }
          }
        },
        "treatment_order_set": {
          "title": "5-治疗医嘱集",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "retrieve": {
                "title": "1-检索",
                "type": "object",
                "properties": {
                  "treatement_name": {
                    "type": "string",
                    "title": "治疗服务名称"
                  },
                  "csId": {
                    "type": "integer",
                    "title": "治疗服务代码"
                  }
                }
              },
              "default": {
                "title": "2-输入默认值",
                "type": "object",
                "properties": {
                  "freqName": {
                    "type": "string",
                    "title": "频次名称"
                  },
                  "freqCode": {
                    "type": "integer",
                    "title": "频次代码"
                  },
                  "quantity": {
                    "title": "数量",
                    "type": "integer"
                  },
                  "treatment_method": {
                    "title": "治疗方法",
                    "type": "string"
                  },
                  "treatment_method_id": {
                    "title": "治疗方法Id",
                    "type": "integer"
                  }
                }
              },
              "execution": {
                "$ref": "#/definitions/execution"
              }
            }
          }
        }
      }
    },
    "clinical_notes": {
      "title": "文书",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "retrieve": {
            "title": "1-检索",
            "type": "object",
            "properties": {
              "templateID": {
                "title": "模板ID",
                "type": "string"
              }
            }
          },
          "default": {
            "title": "2-输入默认值",
            "type": "object"
          },
          "execution": {
            "$ref": "#/definitions/execution"
          }
        }
      }
    },
    "care_plans": {
      "title": "护理计划",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "retrieve": {
            "title": "1-搜索",
            "type": "object",
            "properties": {
              "templateID": {
                "title": "护理计划模板ID",
                "type": "string"
              }
            }
          },
          "defaultValue": {
            "type": "object",
            "title": "2-填入默认值"
          },
          "execution": {
            "$ref": "#/definitions/execution"
          }
        }
      }
    }
  },
  "definitions": {
    "execution": {
      "type": "object",
      "title": "3-路径执行",
      "properties": {
        "requirement": {
          "title": "必要性",
          "type": "string",
          "enum": [
            "required",
            "recommended",
            "none"
          ]
        },
        "priority": {
          "title": "优先级",
          "type": "integer",
          "minimum": 0
        }
      }
    }
  },
  "required": [
    "id"
  ]
}


